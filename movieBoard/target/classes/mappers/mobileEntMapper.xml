<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 
 <mapper namespace="org.union.mappers.MobileEntMapper">
 
 	<sql id="search">
 		<if test="keyword != null">
			<if test="searchType != null">
				<if test="searchType == 't'.toString()">
					and ME_title like concat('%', #{keyword}, '%')
				</if>
			</if>
		</if>
		<if test="company != null">
			and
			   keyword in (select 
						keyword 
					from 
						keyword_data
					where
						user_idx = (select 
										user_idx 
									from 
										user_data 
									where 
										user_name = #{company} 
									and 
										keyword_property = '포함'
									)
					)
		</if>
		<if test="selectKey != null">
				and title_key = #{selectKey}
			</if>
		<if test="startDate != null and endDate != null">
			and writeDate <![CDATA[>=]]> #{startDate}
			and writeDate <![CDATA[<]]> #{endDate}
		</if>
		<if test="hour != null">
			and hour(writeDate) = #{hour}
		</if>
	</sql>
 
 	<select id="read" resultType="MobileEntVO">
 		select
 			*
 		from
 			mobileent_data
 		where
 			ME_idx = #{ME_idx}
 	
 	</select>
 	
 	<select id="searchList" resultType="MobileEntVO">
 		select
 			*
 		from
 			mobileent_data
 		where
 			url is not null
 		<include refid="search"></include>
		
		order by ME_idx desc
		limit  
			#{startPage}, #{perPageNum}
	</select>

	<select id="getSearchCount" resultType="Integer">
		select
			count(*)
		from
			mobileent_data
		where
			url is not null
		
		<include refid="search"></include>	
	
	</select>
 	
 	<select id="getTypeOfMovieCount" resultType="Integer">
 		select
 			count(*)
 		from
 			mobileent_data
 		where
 			keyword_type = '영화'
 		
 		<include refid="search"></include>
 	
 	</select>
 	
 	<select id="getTypeOfActorCount" resultType="Integer">
 		select
 			count(*)
 		from
 			mobileent_data
 		where
 			keyword_type = '배우'
 	
 		<include refid="search"></include>
 	
 	</select>
 </mapper>
