<div class="main-body">
  <div class="page-wrapper">
    <div class="page-header">
      <div class="page-header-title">
        <h4>선택 마케팅 리스트</h4>
      </div>
      <div class="page-header-breadcrumb">
        <ul class="breadcrumb-title">
          <li class="breadcrumb-item">
            <a href="/">
              <i class="fas fa-home"></i>
            </a>
          </li>
          <li class="breadcrumb-item"><a href="#!">선택 마케팅 리스트</a></li>
        </ul>
      </div>
    </div>
    <div class="page-body">
      <div class="row" id="listTable">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <div class="col-12 col-md-2 f-right col-sm-9 m-l-10 p-l-0 p-r-0 m-b-10 right-icon-control">
                <input type="text" class="form-control p-t-10 form-control-default search-text" value="<%= search %>" placeholder="제목 또는 영화제목 검색" id="searchInput">
                <div class="form-icon" id="searchBtn">
                  <i class="fas fa-search"></i>
                </div>
              </div>
              <div class="col-md-2 p-r-0 p-l-0 f-right reportrange">
                <div id="reportrange" class="form-control form-control-default">
                  <i class="glyphicon glyphicon-calendar far fa-calendar-alt"></i>
                  <span></span>
                  <i class="f-right fa fa-angle-down" style="font-size: 17px;"></i>
                </div>
              </div>
            </div>
            <div class="card-block table-border-style">
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th width="5%">NO</th>
                      <th width="10%" style="min-width: 80px;">작성날짜</th>
                      <th width="10%" style="min-width: 80px;">보고날짜</th>
                      <th width="5%" style="min-width: 80px;">사이트</th>
                      <th width="5%" style="min-width: 80px;">총검출수</th>
                      <th width="5%" style="min-width: 80px;">조회수</th>
                      <th width="5%" style="min-width: 80px;">댓글수</th>
                      <th width="5%" style="min-width: 80px;">좋아요수</th>
                      <th width="20%" style="min-width: 120px">제목</th>
                      <th width="20%" style="min-width: 200px">영화제목</th>
                      <th width="10%" style="min-width: 120px;">관리</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%
                      var limit = 10;
                      if(page > 0){
                        (page - 1) * limit;
                      }
                      for(var i=0; i < list.length; i++) {
                    %>
                    <tr>
                      <input type="hidden" id="idx" value="<%=list[i].n_idx%>" />
                      <input type="hidden" id="type" value="<%=list[i].m_type%>" />
                      <th><%= listCount - i - offset %></th>
                      <td><%= list[i].writeDate %></td>
                      <td><input type="text" name="datefilter" class="datepicker form-control" value="<%= list[i].reportDate %>"/></td>
                      <td>
                        <div class="nobr" title="<%=list[i].ps_writer%>"><%=list[i].ps_writer%></div>
                      </td>
                      <td><span id="cnt"><%= list[i].total_cnt %></span>건</td>
                      <td><%= list[i].view_cnt %>회</td>
                      <td><%= list[i].reply_cnt %>회</td>
                      <td><%= list[i].like_cnt %>회</td>
                      <td>
                        <a href="<%= list[i].url %>" target="_blank" title="<%= list[i].ps_content %>">
                          <div class="title_nobr"><%= list[i].ps_content %></div>
                        </a>
                      </td>
                      <td><input type="text" placeholder="제목" id="title" value="<%= list[i].ps_title %>" class="form-control  title_input"/></td>
                      <td>
                        <button class="btn btn-sm btn-danger btn-delete"><i class="far fa-trash-alt"></i></button>
                        <button class="btn btn-sm btn-primary btn-edit"><i class="far fa-edit"></i></button>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                  <tfoot>
                    <tr>
                    <%
                    var pageCount = Math.ceil(listCount/limit);
                    if(pageCount > 1) {
                    %>
                      <td colspan="11">
                        <ul class="pagination float-right">
                          <%
                            var pageSize = 5;
                            var pRCnt = parseInt(page / pageSize);
                            if(page % pageSize == 0){
                              pRCnt = parseInt(page / pageSize) - 1;
                            }
                            if(page > 5) {
                          %>
                            <li class="page-item">
                              <a class="page-link" data-value="1" aria-label="Previous">
                                <i class="ti-angle-double-left f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                            </li>
                            <li class="page-item">
                              <a class="page-link" data-value=="<%=(pRCnt * pageSize)%>" aria-label="Previous">
                                <i class="ti-angle-left f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                            </li>
                          <% } %>
                          <% for(var index=pRCnt * pageSize + 1;index<(pRCnt + 1)*pageSize + 1;index++){%>
                            <li class= "<%=(page == index) ? 'active' : ''%> page-item">
                              <a class="page-link" data-value="<%=index%>" >
                                <%= index %>
                              </a>
                            </li>
                          <%
                              if(index == pageCount) {
                                break;
                              }
                            }
                          %>
                          <% if((pRCnt + 1) * pageSize < pageCount) { %>
                            <li class="page-item">
                              <a class="page-link" data-value="<%=(pRCnt + 1)*pageSize+1%>" aria-label="Next">
                                <i class="ti-angle-right f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </li>
                            <li class="page-item">
                              <a class="page-link" data-value="<%=pageCount%>" aria-label="Next">
                                <i class="ti-angle-double-right f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </li>
                          <% } %>
                        </ul>
                      </td>
                    <% } %>
                    </tr>
                  </tfoot>
                </table>
                <input type="hidden" id="page" value="<%=page%>"/>
                <input type="hidden" id="sDate" value="<%=sDate%>"/>
                <input type="hidden" id="eDate" value="<%=eDate%>"/>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
