<div class="main-body">
  <div class="page-wrapper">
    <div class="page-header">
      <div class="page-header-title">
        <h4>선택 기사 리스트</h4>
      </div>
      <div class="page-header-breadcrumb">
        <ul class="breadcrumb-title">
          <li class="breadcrumb-item">
            <a href="/">
              <i class="fas fa-home"></i>
            </a>
          </li>
          <li class="breadcrumb-item"><a href="#!">선택 기사 리스트</a></li>
        </ul>
      </div>
    </div>
    <div class="page-body">
      <div class="row" id="listTable">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <select name="select" class="col-md-1 form-control form-control-default m-b-10 m-r-5 p-r-5 f-left" id="selectKeyword">
                <option>키워드</option>
                <%for(var i=0; i < klist.length; i++) {%>
                  <option value='<%=klist[i].keyword_main%>'><%=klist[i].keyword_main%></option>
                <%}%>
              </select>
              <select class="form-control col-md-1 form-control-default m-r-5 m-b-10 f-left" id="selectNewsType">
                <option value="0">대분류</option>
                <option value="1">쇼박스영화</option>
                <option value="2">경쟁영화</option>
                <option value="3">캐스팅</option>
                <option value="4">쇼박스기업뉴스</option>
                <option value="5">영화일반</option>
                <option value="6">보도국</option>
                <option value="7">박스오피스</option>
              </select>
              <select class="form-control col-md-1 form-control-default m-r-5 m-b-10 f-left" id="selectSite">
                <option value="all">사이트</option>
                <option value="naver">네이버</option>
                <option value="daum">다음</option>
                <option value="out">기타</option>
              </select>
              <select class="form-control col-md-1 form-control-default m-r-5 m-b-10 f-left" id="selectNum">
                <option value="30">30</option>
                <option value="50">50</option>
                <option value="100">100</option>
              </select>
              <div class="col-12 col-md-2 f-right col-sm-9 m-l-10 p-l-0 p-r-0 m-b-10 right-icon-control">
                <input type="text" class="form-control p-t-10 form-control-default search-text" value="<%= search %>" placeholder="제목/내용 검색" id="searchInput">
                <div class="form-icon" id="searchBtn">
                  <i class="fas fa-search"></i>
                </div>
              </div>
              <div class="col-md-2 p-r-0 p-l-0 f-right reportrange">
                <div id="reportrange" class="form-control form-control-default">
                  <i class="glyphicon glyphicon-calendar far fa-calendar-alt"></i>
                  <span></span>
                  <i class="f-right fa fa-angle-down" style="font-size: 17px;"></i>
                </div>
              </div>
            </div>
            <div class="card-block table-border-style">
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th width="5%">NO</th>
                      <th width="20%">제목</th>
                      <th width="5%" style="min-width: 80px;">언론사</th>
                      <th width="5%" style="min-width: 80px;">기자</th>
                      <th width="5%" style="min-width: 80px;">지면</th>
                      <th width="10%" style="min-width: 80px;">작성날짜</th>
                      <th width="10%" style="min-width: 60px;">보고날짜</th>
                      <th width="5%">순위</th>
                      <th width="5%" style="min-width: 80px;">키워드</th>
                      <th width="5%" style="min-width: 50px;">분류글</th>
                      <!-- <th width="20%" style="min-width: 130px;">썸네일</th> -->
                      <th width="10%" style="min-width: 140px;">대분류</th>
                      <th width="10%" style="min-width: 100px;">대표기사</th>
                      <th width="10%" style="min-width: 100px;">세부기사</th>
                      <th width="10%" style="min-width: 80px;">관리</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%
                      if(currentPage > 0){
                        (currentPage - 1) * limit;
                      }
                      for(var i=0; i < list.length; i++) {
                    %>
                    <tr>
                      <input type="hidden" id="idx" value="<%=list[i].media_idx%>" />
                      <th><%= listCount - i - offset %></th>
                      <td>
                        <a onclick="window.open('<%= list[i].url %>','new','width=#,height=#')" title="<%= list[i].media_title %>">
                          <div class="title_nobr">
                            <% if (list[i].media_subname != 'out' && list[i].media_subname != null){%>
                              <img alt="<%=list[i].media_subname%>" src="http://showbox.email/images/newsclipping/<%=list[i].media_subname%>_logo.png" class="site-logo">
                            <% } %>
                            <%- list[i].media_title %>
                          </div>
                        </a>
                      </td>
                      <td><div class="nobr" title="<%=list[i].media_name%>"><%= list[i].media_name %></div></td>
                      <td>
                        <div class="nobr" title="<%=list[i].reporter_name%>">
                          <% if(list[i].reporter_name == null || list[i].reporter_name == ''){ %>
                            <i class="fas fa-minus"></i>
                          <%}else{%>
                            <%=list[i].reporter_name%>
                          <%}%>
                        </div>
                      </td>
                      <td><input type="text" id="media_page" class="form-control selectText" placeholder="<%=list[i].media_page%>" value="<%=list[i].media_page%>"></td>
                      <td><%= list[i].writeDate %></td>
                      <td><input type="text" name="datefilter" class="datepicker form-control" value="<%= list[i].reportDate %>"/></td>
                      <td>
                        <div class="rank_nobr">
                          <% if(list[i].me_rank == null || list[i].me_rank == ''){ %>
                            <i class="fas fa-minus"></i>
                          <%}else{%>
                            <%=list[i].me_rank+'위'%>
                          <%}%>
                        </div>
                      </td>
                      <td>
                        <div class="key_nobr" title="<%=list[i].keyword%>">
                          <% if(list[i].keyword == null || list[i].keyword == ''){ %>
                            <i class="fas fa-minus"></i>
                          <%}else{%>
                            <%= list[i].keyword %>
                          <%}%>
                        </div>
                      </td>
                      <td>
                        <div class="nobr">
                          <% if(list[i].textType == null){ %>
                            <i class="fas fa-minus"></i>
                          <%}else{%>
                            <%=list[i].textType%>
                          <%}%>
                        </div>
                      </td>
                      <!-- <td>
                        <input type="text" placeholder="이미지주소(URL)" id="thumbnail" value="<%=list[i].thumbnail%>" class="form-control selectText">
                      </td> -->
                      <td>
                        <!-- <input type="number" min="1" max="8" id="newsType" value="<%=list[i].news_type%>" class="form-control"> -->
                        <select class="form-control form-control-default p-l-5 select-news" id="newsType">
                          <option value="1" <%=(list[i].news_type == '1') ? 'selected' : ''%>>쇼박스영화</option>
                          <option value="2" <%=(list[i].news_type == '2') ? 'selected' : ''%>>경쟁영화</option>
                          <option value="3" <%=(list[i].news_type == '3') ? 'selected' : ''%>>캐스팅</option>
                          <option value="4" <%=(list[i].news_type == '4') ? 'selected' : ''%>>쇼박스기업뉴스</option>
                          <option value="5" <%=(list[i].news_type == '5') ? 'selected' : ''%>>영화일반</option>
                          <option value="6" <%=(list[i].news_type == '6') ? 'selected' : ''%>>보도국</option>
                          <option value="7" <%=(list[i].news_type == '7') ? 'selected' : ''%>>박스오피스</option>
                        </select>
                      </td>
                      <td>
                        <input type="text" placeholder="대표기사" id="news_title" value="<%=list[i].media_idx%>" class="form-control selectText">
                      </td>
                      <td>
                        <input type="text" placeholder="세부기사" id="news_detail" value="<%=list[i].news_detail%>" class="form-control selectText">
                      </td>
                      <td>
                        <button class="btn btn-sm btn-danger btn-delete"><i class="far fa-trash-alt"></i></button>
                        <button class="btn btn-sm btn-primary btn-edit"><i class="far fa-edit"></i></button>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                  <tfoot>
                    <tr>
                    <%
                    var pageCount = Math.ceil(listCount/limit);
                    if(pageCount > 1) {
                    %>
                      <td colspan="5">
                        <button id="newsAddBtn" class="btn btn-warning alert-check p-r-5 p-l-5 m-l-15 m-b-5  f-left m-t-5"><i class="fas fa-file-alt"></i>기사입력</button>
                      </td>
                      <td colspan="9">
                        <ul class="pagination float-right">
                          <%
                            var pageSize = 5;
                            var pRCnt = parseInt(currentPage / pageSize);
                            if(currentPage % pageSize == 0){
                              pRCnt = parseInt(currentPage / pageSize) - 1;
                            }
                            if(currentPage > 5) {
                          %>
                            <li class="page-item">
                              <a class="page-link" data-value="1" aria-label="Previous">
                                <i class="ti-angle-double-left f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                            </li>
                            <li class="page-item">
                              <a class="page-link" data-value=="<%=(pRCnt * pageSize)%>" aria-label="Previous">
                                <i class="ti-angle-left f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                            </li>
                          <% } %>
                          <% for(var index=pRCnt * pageSize + 1;index<(pRCnt + 1)*pageSize + 1;index++){%>
                            <li class= "<%=(currentPage == index) ? 'active' : ''%> page-item">
                              <a class="page-link" data-value="<%=index%>" >
                                <%= index %>
                              </a>
                            </li>
                          <%
                              if(index == pageCount) {
                                break;
                              }
                            }
                          %>
                          <% if((pRCnt + 1) * pageSize < pageCount) { %>
                            <li class="page-item">
                              <a class="page-link" data-value="<%=(pRCnt + 1)*pageSize+1%>" aria-label="Next">
                                <i class="ti-angle-right f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </li>
                            <li class="page-item">
                              <a class="page-link" data-value="<%=pageCount%>" aria-label="Next">
                                <i class="ti-angle-double-right f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </li>
                          <% } %>
                        </ul>
                      </td>
                    <% } else { %>
                      <td colspan="14">
                        <button id="newsAddBtn" class="btn btn-warning alert-check p-r-5 p-l-5 m-l-15 m-b-5  f-left m-t-5"><i class="fas fa-file-alt"></i>기사입력</button>
                      </td>
                    <% } %>
                    </tr>
                  </tfoot>
                </table>
                <input type="hidden" id="page" value="<%=page%>"/>
                <input type="hidden" id="limit" value="<%=limit%>"/>
                <input type="hidden" id="type" value="<%=type%>"/>
                <input type="hidden" id="site" value="<%=site%>"/>
                <input type="hidden" id="sDate" value="<%=sDate%>"/>
                <input type="hidden" id="eDate" value="<%=eDate%>"/>
                <input type="hidden" id="keyword" value="<%=keyword%>"/>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Modal start-->
      <div class="modal fade" id="news-Modal" data-backdrop="static" data-keyboard="false" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">기사입력</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
              </button>
            </div>
            <div class="modal-body">
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">*작성일</label>
                <div class="col-sm-5">
                  <input type="text" id="m_writeDate" placeholder="YYYY-MM-DD" class="form-control">
                </div>
                <div class="col-sm-5">
                  <input type="text" id="m_writeDateTime" placeholder="HH:MM:SS" value="00:00:00" class="form-control">
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">키워드</label>
                <div class="col-sm-10">
                  <select class="form-control form-control-default" id="m_keyword">
                    <option value=''>키워드</option>
                    <%for(var i=0; i < klist.length; i++) {%>
                      <option value='<%=klist[i].keyword_main%>'><%=klist[i].keyword_main%></option>
                      <%}%>
                  </select>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">*분류</label>
                <div class="col-sm-10">
                  <select class="form-control form-control-default" id="m_text_type">
                    <option value="좋은글">좋은글</option>
                    <option value="나쁜글">나쁜글</option>
                    <option value="관심글">관심글</option>
                    <option value="기타">기타</option>
                  </select>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">*제목</label>
                <div class="col-sm-10">
                  <input type="text" id="m_media_title" placeholder="제목" class="form-control">
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">내용</label>
                <div class="col-sm-10">
                  <textarea rows="5" cols="5" class="form-control" placeholder="내용" id="m_media_content"></textarea>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">*언론사</label>
                <div class="col-sm-10">
                  <input type="text" id="m_media_name" placeholder="언론사" class="form-control">
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">*기자</label>
                <div class="col-sm-10">
                  <input type="text" id="m_reporter_name" placeholder="기자" class="form-control">
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">지면</label>
                <div class="col-sm-10">
                  <input type="text" id="m_media_page" placeholder="지면" class="form-control">
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">*URL</label>
                <div class="col-sm-10">
                  <input type="text" id="m_url" placeholder="URL" class="form-control">
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">썸네일</label>
                <div class="col-sm-10">
                  <input type="text" id="m_thumbnail" placeholder="이미지주소(URL)" class="form-control">
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">*기사분류</label>
                <div class="col-sm-10">
                  <select class="form-control form-control-default" id="m_news_type">
                    <option value="1">쇼박스 영화</option>
                    <option value="2">경쟁 영화</option>
                    <option value="3">캐스팅</option>
                    <option value="4">쇼박스 기업 뉴스</option>
                    <option value="5">영화 일반</option>
                    <option value="6">보도국</option>
                    <option value="7">박스오피스</option>
                  </select>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label">세부기사</label>
                <div class="col-sm-10">
                  <input type="text" id="m_news_detail" placeholder="세부기사" class="form-control">
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default waves-effect " data-dismiss="modal">취소</button>
              <button type="button" class="btn btn-primary waves-effect waves-light" id="submit">등록</button>
            </div>
          </div>
        </div>
      </div>
      <!-- Modal end-->
    </div>
  </div>
</div>
<!-- sweetalert -->
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/sweetalert@2.1.0/dist/sweetalert.min.js"></script>
<!-- Bootstrap daterangepicker js -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-daterangepicker/2.1.27/daterangepicker.css" />
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-daterangepicker/2.1.27/moment.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-daterangepicker/2.1.27/daterangepicker.js"></script>
<!-- Bootstrap date-time-picker js -->
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/moment@2.22.2/min/moment-with-locales.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
<!-- custom -->
<link rel="stylesheet" href="/pages/newsclipping/css/newsList.css">
<script type="text/javascript" src="/js/error.js"></script>
<script type="text/javascript" src="/pages/newsclipping/js/newsList.js"></script>
