<script src="https://cdn.jsdelivr.net/npm/sweetalert@2.1.0/dist/sweetalert.min.js"></script>
<script type="text/javascript">
  $(document).ready(function(){
    // var url_string = window.location.href
    // var url = new URL(url_string);
    // var searchTypeParams = url.searchParams.get("searchType");
    // var searchParams = url.searchParams.get("search");
    // if(searchTypeParams != null && searchParams != null){
    //   $("#selectSearchType").val(searchTypeParams).prop("selected", true);
    //   $("#keywordInput").val(searchParams);
    // }
    var searchTypeValue = $("#searchType").val();
    var searchValue = $("#search").val();
    if(searchTypeValue != '' && searchValue != ''){
      $("#selectSearchType").val(searchTypeValue).prop("selected", true);
      $("#keywordInput").val(searchValue);
    }
  });
  // 그룹등록 클릭시
  $('.btn-cGroup').on('click',function(){
    if($('input[type=checkbox]:checked').length < 1){
      swal("ERROR!", '체크박스를 선택해주세요.', "error");
      return false;
    }
    swal({
      title: "그룹 등록",
      text:'선택된 이메일을 그룹으로 등록합니다.',
      content: {
        element: "input",
        attributes: {
          placeholder: "그룹이름을 적어주세요.",
          type: "text",
        },
      },
      buttons: ["취소", "등록"],
      closeOnClickOutside: false
    }).then((value) => {
      console.log(value);
      if(value === ""){
        swal("ERROR!", '그룹이름을 적어주세요.', "error");
        return false;
      }
      else if(value != null){
        $.ajax({
          type: "POST",
          url: "/list/groupTitleCheck",
          dataType: "text",
          data: {title : value},
          error: function(req,status,error){
            swal("ERROR!", '새로고침 후 다시 시도해주세요.', "error");
          },
          success: function(data){
            console.log(data);
            if(data == 'fail'){
              swal("ERROR!", "그룹이름이 중복됩니다. 다시 입력해 주세요.", "error");
            }else if(data == 'success'){
              var list = [];
              $('input[type=checkbox]:checked').each(function(idx,ele){
                var trEle = $(ele).parents('tr');
                list.push({title:value,idx:trEle.find('#idx').val(),email:trEle.find('.edit').text()});
              });
              addGroup(list);
            }
            else{
              swal("ERROR!", '새로고침 후 다시 시도해주세요.', "error");
            }
          }
        });
      }
    });
  });
  function addGroup(arr){
    $('input[type=checkbox]:checked').prop('checked',false);
    $.ajax({
      type: "POST",
      url: "/list/addGroup",
      data: {'list' : JSON.stringify(arr)},
      error:function(request,status,error){
        console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
        swal("ERROR!", '새로고침 후 다시 시도해주세요.', "error");
      },
      success:function(data){
        if(data.status){
          swal("SUCCESS!", '그룹등록 완료했습니다.', "success");
        }else{
          swal("ERROR!", '새로고침 후 다시 시도해주세요.', "error");
        }
      }
    });
  }
  // 이메일 변경시 중복체크하도록
  $('#email').on('change',function(){
    $('#emailCheck').val('');
  });
  // 이메일 클릭시
  $(document).on('click','.edit',function(){
    var trEle = $(this).parents('tr');
    var tdEles = trEle.find('td');

    var user = tdEles.eq(1).text();
    var email = tdEles.eq(2).text();
    var media = tdEles.eq(3).text();
    var name = tdEles.eq(4).text();
    var tel = tdEles.eq(5).text().replace(/[-]/g,'');

    // 초기화
    $('span.messages p').text('');
    $('span.messages').removeClass("form-control-danger");
    $('span.messages').hide();

    $('#user').text(user);
    $('#email').val(email);
    $('#media').text(media);
    $('#name').val(name);
    $('#tel').val(tel);
    $('#n_idx').val(trEle.find('input').eq(0).val());

    $('#o_email').val(email);
    $('#o_name').val(name);
    $('#o_tel').val(tel);

    $('#edit-Modal').modal('show');
  });
  // 모달 수정버튼 클릭시
  $('.btn-update').on('click',function(){
    var check=true;
    if($("#name").val() != $("#o_name").val() && $("#name").val() == ""){
      check = requiredMessage("name","이름을 입력해주세요.");
    }
    if($("#email").val() != $("#o_email").val() && $("#email").val() == ""){
      check = requiredMessage("email","이메일를 입력해주세요.");
    }
    if($("#email").val() != $("#o_email").val() && $("#email").val() != "" && $("#emailCheck").val() == ""){
      check = requiredMessage("email","이메일를 중복확인 해주세요.");
    }
    if($("#name").val() == $("#o_name").val() && $("#tel").val() == $("#o_tel").val() && $("#email").val() == $("#o_email").val()){
      swal("ERROR!", "변경사항이 없습니다.", "error");
      return false;
    }
    if(check){
      swal({
        title: "수정 하시겠습니까?",
        icon: "warning",
        buttons: ["취소", true],
        dangerMode: true,
      })
      .then((value) => {
        if (value != null) {
          var param = {
            'M_name': $('#name').val(),
            'M_email': $('#email').val(),
            'M_tel':$('#tel').val().replace(/[-]/g,'').replace(/[^0-9]/gi,""),
            'n_idx':$('#n_idx').val()
          };
          updateMail(param);
        }
      });
    }
  });
  // update ajax
  function updateMail(param){
    $.ajax({
      url: '/list/update',
      type: 'post',
      data : param,
      datatype : 'json',
      error:function(request,status,error){
        console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
        swal("ERROR!", '새로고침 후 다시 시도해주세요.', "error")
        .then((value)=>{
          $('#email').val($('#o_email').val());
          $('#name').val($('#o_name').val());
          $('#tel').val($('#o_tel').val());
        });
      },
      success:function(data){
        if(data.status){
          swal("SUCCESS!", '메일 업데이트 되었습니다.', "success")
          .then((value) => {
            reloadPage();
          });
        }else{
          swal("ERROR!", '새로고침 후 다시 시도해주세요.', "error");
        }
      }
    });
  }
  // 모달 삭제버튼 클릭시
  $('.btn-delete').on('click',function(){
    swal({
      title: "삭제 하시겠습니까?",
      icon: "warning",
      buttons: ["취소", true],
      dangerMode: true,
    })
    .then((value) => {
      if (value != null) {
        $.ajax({
          url: '/list/delete',
          type: 'post',
          data : {
            idx: $('#n_idx').val(),
            email: $('#o_email').val(),
            name: $('#o_name').val()
          },
          datatype : 'json',
          error:function(request,status,error){
            console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
            swal("ERROR!", '새로고침 후 다시 시도해주세요.', "error")
            .then((value)=>{
              $('#email').val($('#o_email').val());
              $('#name').val($('#o_name').val());
              $('#tel').val($('#o_tel').val());
            });
          },
          success:function(data){
            if(data.status){
              swal("SUCCESS!", '메일 삭제 되었습니다.', "success")
              .then((value)=>{
                reloadPage();
                $('#edit-Modal').modal('hide');
              });
            }else{
              swal("ERROR!", '새로고침 후 다시 시도해주세요.', "error");
            }
          }
        });
      }
    });
  });
  // input 선택시 경고문 없앰
  $('.modal input').on('focus',function(){
    $(this).parents('.edit-td').find('.error').text('');
    $(this).parents('.edit-td').find('.messages').hide();
    $(this).removeClass("form-control-danger");
  });
  // input box 경고문
  function requiredMessage(target,msg){
    $("#"+target).parents('.edit-td').find('.messages').show();
    $("#"+target).parents('.edit-td').find('.error').text(msg);
    $("#"+target).addClass("form-control-danger");
    return false;
  }
  // 중복 체크
  $("#emailCheckBtn").on("click",function(){
    swal({
      title: "✓ 이메일 중복 체크",
      content: {
        element: "input",
        attributes: {
          value: $('#email').val(),
          type: "text",
        },
      },
      buttons: ["취소", "확인"],
      closeOnClickOutside: false,
      closeOnEsc: false
    })
    .then((value) => {
      console.log('이메일 중복 체크:',value);
      if (value != null) {
        var regExp = /^[0-9a-zA-Z]([-_.]?[0-9a-zA-Z])*@[0-9a-zA-Z]([-_.]?[0-9a-zA-Z])*.[a-zA-Z]{2,3}$/i;
        value = $('.swal-content__input').val();
        if (value.match(regExp) == null) {
          swal("ERROR!", "이메일을 다시 입력해주세요.", "error");
          return false;
        }
        $.ajax({
          type: "POST",
          url: "/list/add/emailCheck",
          dataType: "json",
          data: {email : value},
          error: function(req,status,error){
            console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
            swal("ERROR!", '새로고침 후 다시 시도해주세요.', "error");
          },
          success: function(data){
            console.log(data);
            if(data.msg == 'fail'){
              swal("ERROR!", "이메일 중복됩니다. 다시 입력해 주세요.", "error")
              .then((value)=>{
                $('#email').val($('#o_email').val());
              });
            }else if(data.msg == 'success'){
              swal("중복확인!", value+"는 사용가능한 이메일입니다.", "success");

              $('#email').val(value);
              $("#emailCheck").val("true");
              $('#email').removeClass("form-control-danger");
              $('#email').siblings().children("p").text("");
            }else{
              swal("ERROR!", '새로고침 후 다시 시도해주세요.', "error");
            }
          }
        });
      }
    });
  });
  // 검색시
  $('#keywordInput').on('keyup',function(event){
    if(event.keyCode == 13){
      $('#searchBtn').trigger('click');
    };
  });
  $('#searchBtn').on('click',function(){
    if($("#keywordInput").val() == ''){
      alert('검색어를 넣어주세요.');
      return false;
    }
    location.href = '/list?page=1&searchType='+$("#selectSearchType option:selected").val()+'&search='+$("#keywordInput").val();
  });
  //페이지 이동
  $(document).on('click','.page-link',function(){
    var param = {
      page : Number($(this).data().value)
    };
    // var href = new URL(window.location.href);
    // if(href.searchParams.get("searchType") != '' && href.searchParams.get("searchType") != null){
    //   param.searchType = href.searchParams.get("searchType");
    // }
    // if(href.searchParams.get("search") != '' && href.searchParams.get("search") != null){
    //   param.search = href.searchParams.get("search");
    // }
    var searchTypeValue = $("#searchType").val();
    var searchValue = $("#search").val();
    if(searchTypeValue != ''){
      param.searchType = $("#searchType").val();
    }
    if(searchValue != ''){
      param.search = $("#search").val();
    }
    ajaxGetPageList(param);
  });
  function ajaxGetPageList(param){
    console.log('ajaxGetPageList:',param);
    $.ajax({
      url: '/list/getNextPage',
      type: 'post',
      data: param,
      error: function(request,status,error){
        console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
        alert('새로 고침해주세요.');
      },
      success: function(data){
        if(data.status != true){
          alert('새로 고침해주세요.');
