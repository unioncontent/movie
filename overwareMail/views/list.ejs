            <div class='modal-header'>
              <h5 class="modal-title">수정</h5>
            </div>
            <div class='modal-body'>
              <div class='card'>
                <div class="card-block table-border-style">
                  <div class="table-responsive">
                    <table class="table table-sm" id='modal-cnt'>
                      <tbody>
                        <tr>
                          <input type="hidden" id="n_idx"/>
                          <th class="b-r-1 text-left" width="30%">회사</th>
                          <td class="edit-td" id="user"></td>
                        </tr>
                        <tr>
                          <th class="b-r-1 text-left">이메일</th>
                          <td class="edit-td">
                            <div class="col-sm-12 row">
                              <input class="form-control col-sm-6 input-sm" id="email" type='text'/>
                              <input type="hidden" id="emailCheck"/>
                              <input id="o_email" type='hidden'/>
                              <div class="col-sm-5">
