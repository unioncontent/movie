<div class="main-body">
  <div class="page-wrapper">
    <div class="page-header">
      <div class="page-header-title">
        <h4>메일 리스트 전체</h4>
      </div>
      <div class="page-header-breadcrumb">
        <ul class="breadcrumb-title">
          <li class="breadcrumb-item">
            <a href="/">
              <i class="fas fa-home"></i>
            </a>
          </li>
          <li class="breadcrumb-item"><a href="#!">관리현황</a></li>
          <li class="breadcrumb-item"><a href="#!">메일 리스트 전체</a></li>
        </ul>
      </div>
    </div>
    <div class="page-body">
      <div class="row" id="listTable">
        <div class="col-md-12">
          <div class="col-sm-3 input-group input-group-button input-group-inverse p-l-0 p-r-0 m-b-10 f-right btn-select">
            <input id="keywordInput" type="text" class="form-control">
            <span class="input-group-addon" id="searchBtn">
              <button class=" btn btn-inverse">검색</button>
            </span>
          </div>
          <select id="selectSearchType" name="select" class="col-sm-1 form-control form-control-inverse m-r-10 m-b-10 f-right search-select">
            <option value="c">회사</option>
            <option value="e">이메일</option>
            <option value="n">이름</option>
          </select>
        </div>
        <div class="col-md-12">
          <div class="card">
            <div class="card-block table-border-style">
              <div class="table-responsive">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th width="1%">선택</th>
                      <th width="5%">NO</th>
                      <th width="10%">회사</th>
                      <th width="25%">이메일</th>
                      <th width="10%">언론사(회사명)</th>
                      <th width="5%">이름(기자명)</th>
                      <th width="10%">연락처</th>
                      <th width="15%">등록일</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%function phoneFomatter(num,type){
                      var formatNum = '';
                      if(num.length==11){
                        if(type==0){
                          formatNum = num.replace(/(\d{3})(\d{4})(\d{4})/, '$1-****-$3');
                        }else{
                          formatNum = num.replace(/(\d{3})(\d{4})(\d{4})/, '$1-$2-$3');
                        }
                      }else if(num.length==8){
                        formatNum = num.replace(/(\d{4})(\d{4})/, '$1-$2');
                      }else{
                        if(num.indexOf('02')==0){
                          if(type==0){
                            formatNum = num.replace(/(\d{2})(\d{4})(\d{4})/, '$1-****-$3');
                          }else{
                            formatNum = num.replace(/(\d{2})(\d{4})(\d{4})/, '$1-$2-$3');
                          }
                        }else{
                          if(type==0){
                            formatNum = num.replace(/(\d{3})(\d{3})(\d{4})/, '$1-***-$3');
                          }else{
                            formatNum = num.replace(/(\d{3})(\d{3})(\d{4})/, '$1-$2-$3');
                          }
                        }
                      }
                      return formatNum;
                    }%>

                    <%
                      var limit = 20;
                      if(currentPage > 0){
                        (currentPage - 1) * limit;
                      }
                      for(var i=0; i < mailList.length; i++) {
                    %>
                    <tr>
                      <input type="hidden" id="idx" value="<%=mailList[i].n_idx%>" />
                      <td>
                        <div class="border-checkbox-section" style="max-width: 30px;">
                          <div class="border-checkbox-group border-checkbox-group-default">
                            <input class="border-checkbox" type="checkbox" id="checkbox<%=i%>">
                            <label class="border-checkbox-label" for="checkbox<%=i%>"></label>
                          </div>
                        </div>
                      </td>
                      <th><%= mailListCount - i - offset %></th>
                      <td><%=mailList[i].user_name%></td>
                      <td class="f-w-900 edit"><%=mailList[i].M_email%></td>
                      <td><%=mailList[i].M_ptitle%></td>
                      <td><%=mailList[i].M_name%></td>
                      <td><%=(mailList[i].M_tel == null)?'':phoneFomatter(mailList[i].M_tel)%></td>
                      <td><%=mailList[i].M_regdate%></td>
                    </tr>
                    <% }; %>
                  </tbody>
                  <tfoot>
                    <%
                    var pageCount = Math.ceil(mailListCount/limit);
                    if(pageCount > 1) {
                    %>
                    <tr>
                      <td colspan="8">
                        <ul class="pagination float-right">
                          <%
                            var pageSize = 5;
                            var pRCnt = parseInt(currentPage / pageSize);
                            if(currentPage % pageSize == 0){
                              pRCnt = parseInt(currentPage / pageSize) - 1;
                            }
                            if(currentPage > 5) {
                          %>
                            <li class="page-item">
                              <a class="page-link" data-value="1" aria-label="Previous">
                                <i class="ti-angle-double-left f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                            </li>
                            <li class="page-item">
                              <a class="page-link" data-value=="<%=(pRCnt * pageSize)%>" aria-label="Previous">
                                <i class="ti-angle-left f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                            </li>
                          <% } %>
                          <% for(var index=pRCnt * pageSize + 1;index<(pRCnt + 1)*pageSize + 1;index++){%>
                            <li class= "<%=(currentPage == index) ? 'active' : ''%> page-item">
                              <a class="page-link" data-value="<%=index%>" >
                                <%= index %>
                              </a>
                            </li>
                          <%
                              if(index == pageCount) {
                                break;
                              }
                            }
                          %>
                          <% if((pRCnt + 1) * pageSize < pageCount) { %>
                            <li class="page-item">
                              <a class="page-link" data-value="<%=(pRCnt + 1)*pageSize+1%>" aria-label="Next">
                                <i class="ti-angle-right f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </li>
                            <li class="page-item">
                              <a class="page-link" data-value="<%=pageCount%>" aria-label="Next">
                                <i class="ti-angle-double-right f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </li>
                          <% } %>
                        </ul>
                      </td>
                    </tr>
                    <% } %>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
          <button class="btn btn-inverse" style="float: right;"><i class="fas fa-plus"></i>그룹등록</button>
        </div>
      </div>
      <!-- Modal start-->
      <div class='modal fade' id='edit-Modal' role='dialog'>
        <div class='modal-dialog modal-lg' role='document'>
          <div class='modal-content'>
            <div class='modal-header'>
              <h5 class="modal-title">수정</h5>
            </div>
            <div class='modal-body'>
              <div class='card'>
                <div class="card-block table-border-style">
                  <div class="table-responsive">
                    <table class="table table-sm" id='modal-cnt'>
                      <tbody>
                        <tr>
                          <input type="hidden" id="n_idx"/>
                          <th class="b-r-1 text-left" width="30%">회사</th>
                          <td class="edit-td" id="user"></td>
                        </tr>
                        <tr>
                          <th class="b-r-1 text-left">이메일</th>
                          <td class="edit-td">
                            <div class="col-sm-12 row">
                              <input class="form-control col-sm-6 input-sm" id="email" type='text'/>
                              <input type="hidden" id="emailCheck"/>
                              <input id="o_email" type='hidden'/>
                              <div class="col-sm-5">
                                <button id="emailCheckBtn" type="button" class="btn btn-inverse">
                                  중복체크
                                </button>
                              </div>
                            </div>
                            <span class='messages'><p class=' text-danger error m-b-5'></p></span>
                          </td>
                        </tr>
                        <tr>
                          <th class="b-r-1 text-left">언론사</th>
                          <td class="edit-td" id="media"></td>
                        </tr>
                        <tr>
                          <th class="b-r-1 text-left">이름</th>
                          <td class="edit-td">
                            <input class="form-control col-sm-6 input-sm" id="name" type='text'/>
                            <input id="o_name" type='hidden'/>
                            <span class='messages'><p class=' text-danger error m-b-5'></p></span>
                          </td>
                        </tr>
                        <tr>
                          <th class="b-r-1 text-left">연락처</th>
                          <td class="edit-td">
                            <input class="form-control col-sm-6 input-sm" id="tel" type='tel'/>
                            <input id="o_tel" type='hidden'/>
                            <span class='messages'><p class=' text-danger error m-b-5'></p></span>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button class="btn btn-primary mobtn btn-update" data-dismiss='modal' type="button">수정</button>
              <button class="btn btn-danger mobtn btn-delete" data-dismiss='modal' type="button">삭제</button>
              <button class="btn btn-secondary mobtn" data-dismiss='modal' aria-label='Close' type="button">취소</button>
            </div>
          </div>
        </div>
      </div>
      <!-- Modal end-->
    </div>
  </div>
</div>
<style>
  .messages{
    display: none;
  }
</style>
<!-- alert -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert@2.1.0/dist/sweetalert.min.js"></script>
<script type="text/javascript">
  $(document).ready(function(){
    var url_string = window.location.href
    var url = new URL(url_string);
    var searchTypeParams = url.searchParams.get("searchType");
    var searchParams = url.searchParams.get("search");
    if(searchTypeParams != null && searchParams != null){
      $("#selectSearchType").val(searchTypeParams).prop("selected", true);
      $("#keywordInput").val(searchParams);
    }
  });
  $('.modal input').on('focus',function(){
    console.log($(this));
    $(this).parents('.edit-td').find('.messages').hide();
  });
  // 모달 수정버튼 클릭시
  $('.btn-update').on('click',function(){
    swal({
      title: "수정 하시겠습니까?",
      icon: "warning",
      buttons: ["취소", true],
      dangerMode: true,
    })
    .then((value) => {
      if (value != null) {
        var check=true;
        if($("#name").val() != $("#o_name").val() && $("#name").val() == ""){
          check = requiredMessage("name","이름을 입력해주세요.");
        }
        if($("#tel").val() != $("#o_tel").val() && $("#tel").val() == ""){
          check = requiredMessage("tel","전화번호를 입력해주세요.");
        }
        if($("#email").val() != $("#o_email").val() && $("#email").val() == ""){
          check = requiredMessage("email","이메일를 입력해주세요.");
        }
        if($("#email").val() != $("#o_email").val() && $("#email").val() != "" && $("#emailCheck").val() == ""){
          check = requiredMessage("email","이메일를 중복확인 해주세요.");
        }
        if(check){
          if($("#name").val() != $("#o_name").val() && $("#tel").val() != $("#o_tel").val() && $("#email").val() != $("#o_email").val()){
            swal("ERROR!", "변경사항이 없습니다.", "error");
            return false;
          }
          var param = {
            'M_name': $('#name').val(),
            'M_email': $('#email').val(),
            'M_tel':$('#tel').val()
          };
          updateMail(param);
        }
        else{
          $('#edit-Modal').modal('show');
        }
      }
      else{
        $('#edit-Modal').modal('show');
      }
    });
  });
  function updateMail(){
    $.ajax({
      url: '/list/update',
      type: 'post',
      data : param,
      datatype : 'json',
      error:function(request,status,error){
        // alert('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
        swal("ERROR!", request.responseText, "error");
      },
      success:function(data){
        swal("SUCCESS!", data, "success")
        .then((value) => {

          window.location.reload();
        });
      }
    });
  }
  // input box 경고문
  function requiredMessage(target,msg){
    $("#"+target).parents('.edit-td').find('.messages').show();
    $("#"+target).parents('.edit-td').find('.error').text(msg);
    // $("#"+target).addClass("form-control-danger");
    return false;
  }
  // 모달 삭제버튼 클릭시
  $('.btn-delete').on('click',function(){
    swal({
      title: "삭제 하시겠습니까?",
      icon: "warning",
      buttons: ["취소", true],
      dangerMode: true,
    })
    .then((value) => {
      if (value != null) {
        $.ajax({
          url: '/list/delete',
          type: 'post',
          data : param,
          datatype : 'json',
          error:function(request,status,error){
            // alert('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
            swal("ERROR!", request.responseText, "error");
          },
          success:function(data){
            swal("SUCCESS!", data, "success");
          }
        });
      }
    });
  });
  // 중복 체크
  $("#emailCheckBtn").on("click",function(){
    swal({
      title: "✓ 이메일 중복 체크",
      content: {
        element: "input",
        attributes: {
          value: $('#email').val(),
          type: "text",
        },
      },
      buttons: ["취소", "확인"],
      closeOnClickOutside: false,
      closeOnEsc: false
    })
    .then((value) => {
      console.log(value);
      var regExp = /^[0-9a-zA-Z]([-_.]?[0-9a-zA-Z])*@[0-9a-zA-Z]([-_.]?[0-9a-zA-Z])*.[a-zA-Z]{2,3}$/i;
      if (value != null) {
        if (value.match(regExp) == null) {
          swal("ERROR!", "이메일을 다시 입력해주세요.", "error");
          return false;
        }
        $.ajax({
          type: "POST",
          url: "/list/add/emailCheck",
          dataType: "text",
          data: {email : value},
          error: function(req,status,error){
            swal("ERROR!", req.status+"\n"+error, "error");
          },
          success: function(data){
            console.log(data);
            if(data == 'fail'){
              swal("ERROR!", "이메일 중복됩니다. 다시 입력해 주세요.", "error");
            }else if(data == 'success'){
              swal("중복확인!", value+"는 사용가능한 이메일입니다.", "success");

              $('#email').val(value);
              $("#emailCheck").val("true");
              $('#email').removeClass("form-control-danger");
              $('#email').siblings().children("p").text("");
            }
          }
        });
      }
    });
  });
  // 이메일 클릭시
  $(document).on('click','.edit',function(){
    var trEle = $(this).parents('tr');
    var tdEles = trEle.find('td');
    $('#user').text(tdEles.eq(1).text());
    $('#media').text(tdEles.eq(3).text());
    $('#email').val(tdEles.eq(2).text());
    $('#name').val(tdEles.eq(4).text());
    $('#tel').val(tdEles.eq(5).text());
    $('#n_idx').val(trEle.find('input').eq(0).val());
    $('#o_email').val(tdEles.eq(2).text());
    $('#o_name').val(tdEles.eq(4).text());
    $('#o_tel').val(tdEles.eq(5).text());
    $('#edit-Modal').modal('show');
  });
  // 검색시
  $('#keywordInput').on('keyup',function(event){
    if(event.keyCode == 13){
      $('#searchBtn').trigger('click');
    };
  });
  $('#searchBtn').on('click',function(){
    if($("#keywordInput").val() == ''){
      alert('검색어를 넣어주세요.');
      return false;
    }
    location.href = '/list?page=1&searchType='+$("#selectSearchType option:selected").val()+'&search='+$("#keywordInput").val();
  })
  //페이지 이동
  $(document).on('click','.page-link',function(){
    var href = new URL(window.location.href);
    var param = {
      page : Number($(this).data().value)
    };
    if(href.searchParams.get("searchType") != '' && href.searchParams.get("searchType") != null){
      param.searchType = href.searchParams.get("searchType");
    }
    if(href.searchParams.get("search") != '' && href.searchParams.get("search") != null){
      param.search = href.searchParams.get("search");
    }
    ajaxGetPageList(param);
  });
  function ajaxGetPageList(param){
    console.log('ajaxGetPageList:',param);
    $.ajax({
      url: '/list/getNextPage',
      type: 'post',
      data: param,
      error: function(request,status,error){
        console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
        alert('새로고침해주세요~');
      },
      success: function(data){
        console.log(data);
        if(typeof(history.pushState) == 'function'){
          //현재 주소를 가져온다.
          var renewURL = location.href;
          //현재 주소 중 page 부분이 있다면 새로 부여될 페이지 번호를 할당한다.
          renewURL = renewURL.replace(/\?page=([0-9]+)/ig,'?page='+data.currentPage);
          if(renewURL.indexOf("?page=") == -1){
            renewURL += '?page='+data.currentPage;
          }
          //페이지 갱신 실행!
          history.pushState(null, null,renewURL);
        }
        $('#listTable tfoot').empty();
        var limit = 20;
        var pageCount = Math.ceil(data.mailListCount/limit);
        if(pageCount > 1) {
          var html = '<tr><td colspan="8"><ul class="pagination float-right">';
          var pageSize = 5;
          var pRCnt = parseInt(data.currentPage / pageSize);
          if(data.currentPage % pageSize == 0){
            pRCnt = parseInt(data.currentPage / pageSize) - 1;
          }
          if(data.currentPage > 5) {
            html += '<li class="page-item"><a class="page-link" data-value="1" aria-label="Previous">\
                <i class="ti-angle-double-left f-12"></i>\
                <span aria-hidden="true"></span>\
                <span class="sr-only">Previous</span>\
              </a></li>\
              <li class="page-item"><a class="page-link" data-value=\"'+(pRCnt * pageSize)+'"\ aria-label="Previous">\
                <i class="ti-angle-left f-12"></i>\
                <span aria-hidden="true"></span>\
                <span class="sr-only">Previous</span>\
              </a></li>';
          }

          for(var index=pRCnt * pageSize + 1;index<(pRCnt + 1)*pageSize + 1;index++){
            var active = (data.currentPage == index) ? "active" : "";
            html += '<li class=\"'+active+' page-item">\
              <a class="page-link" data-value=\"'+index+'"\ >'+index+'</a></li>'

            if(index == pageCount) {
              break;
            }
          }
          if((pRCnt + 1) * pageSize < pageCount) {
            html += '<li class="page-item">\
                  <a class="page-link" data-value=\"'+((pRCnt + 1)*pageSize+1)+'"\ aria-label="Next">\
                    <i class="ti-angle-right f-12"></i>\
                    <span aria-hidden="true"></span>\
                    <span class="sr-only">Next</span>\
                  </a></li>\
                  <li class="page-item">\
                  <a class="page-link" data-value=\"'+pageCount+'"\ aria-label="Next">\
                    <i class="ti-angle-double-right f-12"></i>\
                    <span aria-hidden="true"></span>\
                    <span class="sr-only">Next</span>\
                  </a></li>';
          }
          html += '</ul></td></tr>';
          $('#listTable tfoot').append(html);

          $('#listTable tbody').empty();
          data.mailList.forEach(function(item,idx){
            var numIdx = Math.ceil(data.mailListCount-(data.offset+idx)).toString();
            var html = '<tr>\
              <input type="hidden" id="idx" value="'+item.n_idx+'" />\
              <td>\
                <div class="border-checkbox-section" style="max-width: 30px;">\
                  <div class="border-checkbox-group border-checkbox-group-default">\
                    <input class="border-checkbox" type="checkbox" id="checkbox0">\
                    <label class="border-checkbox-label" for="checkbox0"></label>\
                  </div>\
                </div>\
              </td>\
              <th>'+numIdx+'</th>\
              <td>'+item.user_name+'</td>\
              <td class="f-w-900 edit">'+item.M_email+'</td>\
              <td>'+item.M_ptitle+'</td>\
              <td>'+item.M_name+'</td>\
              <td>'+((item.M_tel == null)?'':phoneFomatter(item.M_tel))+'</td>\
              <td>'+item.M_regdate+'</td>\
            </tr>'
            $('#listTable tbody').append(html);
          });
        }
      }
    });
  }
  function phoneFomatter(num,type){
    var formatNum = '';
    if(num.length==11){
      if(type==0){
        formatNum = num.replace(/(\d{3})(\d{4})(\d{4})/, '$1-****-$3');
      }else{
        formatNum = num.replace(/(\d{3})(\d{4})(\d{4})/, '$1-$2-$3');
      }
    }else if(num.length==8){
      formatNum = num.replace(/(\d{4})(\d{4})/, '$1-$2');
    }else{
      if(num.indexOf('02')==0){
        if(type==0){
          formatNum = num.replace(/(\d{2})(\d{4})(\d{4})/, '$1-****-$3');
        }else{
          formatNum = num.replace(/(\d{2})(\d{4})(\d{4})/, '$1-$2-$3');
        }
      }else{
        if(type==0){
          formatNum = num.replace(/(\d{3})(\d{3})(\d{4})/, '$1-***-$3');
        }else{
          formatNum = num.replace(/(\d{3})(\d{3})(\d{4})/, '$1-$2-$3');
        }
      }
    }
    return formatNum;
  }
</script>
