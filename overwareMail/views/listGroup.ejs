<!-- sweetalert -->
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/sweetalert@2.1.0/dist/sweetalert.min.js"></script>
<script type="text/javascript">
  $(document).ready(function(){
    // var url_string = window.location.href
    // var url = new URL(url_string);
    // var searchParams = url.searchParams.get("search");
    // if(searchParams != null){
    //   $("#keywordInput").val(searchParams);
    // }
    var searchValue = $("#search").val();
    if(searchValue != ''){
      $("#keywordInput").val(searchValue);
    }
  });
  // 그룹 삭제
  $(document).on('click','.btn-delete',function(){
    var trEle = $(this).parents('tr');
    var tdEles = trEle.find('td');
    swal({
      title: "["+tdEles.eq(1).text()+"]을 삭제하시겠습니까?",
      icon: "warning",
      buttons: ["취소", true],
      dangerMode: true,
    })
    .then((value) => {
      if (value != null) {
        $.ajax({
          url: '/list/group/delete',
          type: 'post',
          data : {
            title: tdEles.eq(1).text()
          },
          datatype : 'json',
          error:function(request,status,error){
            console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
            swal("ERROR!", '새로고침 후 다시 시도해주세요.', "error");
          },
          success:function(data){
            if(data.status){
              swal("SUCCESS!", "["+tdEles.eq(1).text()+"]을 삭제했습니다.", "success")
              .then((value)=>{
                reloadPage();
              });
            }else{
              swal("ERROR!", '새로고침 후 다시 시도해주세요.', "error");
            }
          }
        });
      }
    });
  });
  // 추가 클릭시
  $('#insertBtn').on('click',function(){
    var check=true;
    var regExp = /^[0-9a-zA-Z]([-_.]?[0-9a-zA-Z])*@[0-9a-zA-Z]([-_.]?[0-9a-zA-Z])*.[a-zA-Z]{2,3}$/i;
    if($('#email').val()==''){
      check = requiredMessage("email","이메일를 입력해주세요.");
    }
    else if ($('#email').val().match(regExp) == null) {
      check = requiredMessage("email","이메일을 다시 입력해주세요.");
    }
    if($('#name').val()==''){
      check = requiredMessage("name","이름을 입력해주세요.");
    }
    if(check){
      swal({
        title: "그룹 추가하시겠습니까?",
        icon: "warning",
        buttons: ["취소", true],
        dangerMode: true,
      })
      .then((value) => {
        if (value != null) {
          $.ajax({
            type: "POST",
            url: "/list/add/emailCheck",
            data: {email : $('#email').val(), name: $('#name').val()},
            error:function(request,status,error){
              console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
              swal("ERROR!", '새로고침 후 다시 시도해주세요.', "error");
            },
            success:function(data){
              if(data.msg == 'success'){
                var list=[{title:$('#group').text(),idx:data.idx,email:$('#email').val()}];
                addGroup(list);
              }else if(data.msg == 'fail'){
                swal("ERROR!", '이메일이 없습니다.\n메일등록 후 진행해주세요.', "error");
              }else{
                swal("ERROR!", '새로고침 후 다시 시도해주세요.', "error");
              }
            }
          });
        }
      });
    }
  });
  $('#email,#name').on('focus',function(){
    $(this).siblings('.messages').children('.error').text('');
    $(this).removeClass("form-control-danger");
  });
  // input box 경고문
  function requiredMessage(target,msg){
    $("#"+target).siblings('.messages').children('.error').text(msg);
    $("#"+target).addClass("form-control-danger");
    return false;
  }
  // 검색시
  $('#keywordInput').on('keyup',function(event){
    if(event.keyCode == 13){
      $('#searchBtn').trigger('click');
    };
  });
  $('#searchBtn').on('click',function(){
    var url = '/list/group?page=1';
    if($("#keywordInput").val() != ''){
      url += '&search='+$("#keywordInput").val();
    }
    location.href = url;
  });
  // 수정버튼 클릭시
  $(document).on('click','.btn-edit',function(){
    // 메일 그룹 리스트 설정
    var tdEles = $(this).parents('tr').find('td');
    $('#company').text(tdEles.eq(0).text());
    $('#group').text(tdEles.eq(1).text());
    var param = {
      page : 1,
      group : $('#group').text()
    };
    ajaxGetPageGroupList(param);
    $('#email').val('');
    $('#name').val('');
    $('#group-Modal').modal('show');
  });
  function ajaxGetPageGroupList(param){
    console.log('ajaxGetPageGroupList:',param);
    $.ajax({
      url: '/list/getNextGroupModalPage',
      type: 'post',
      data: param,
      error: function(request,status,error){
        console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
        alert('새로 고침해주세요.');
      },
      success: function(data){
        if(data.status != true){
          alert('새로 고침해주세요.');
          return false;
        }
        $('#modal-cntList tbody').empty();
        data.list.groupList.forEach(function(item,idx){
          var numIdx = Math.ceil(data.list.groupListCount-(data.list.offset+idx)).toString();
          var html = '<tr>\
            <th scope="row" class="centerTh">'+numIdx+'</th>\
            <td>\
              <div class="keyword_nobr">'+item.M_email+'</div>\
            </td>\
            <td>'+item.M_name+'</td>\
            <td>'+phoneFomatter(item.M_tel)+'</td>\
            <td>\
              <button class="btn-remove btn btn-danger btn-sm" data-value="'+item.n_idx+'"><i class="fas fa-minus" style="margin-right:0"></i></button>\
            </td>\
          </tr>';
          $('#modal-cntList tbody').append(html);
        });
        // paging
        var limit = 6;
        var pageCount = Math.ceil(data.list.groupListCount/limit);
        $('#modal-cntList tfoot').empty();
        if(pageCount > 1) {
          var html = '<tr><td colspan="6"><ul class="pagination float-right">';
          var pageSize = 5;
          var pRCnt = parseInt(data.list.currentPage / pageSize);
          if(data.list.currentPage % pageSize == 0){
            pRCnt = parseInt(data.list.currentPage / pageSize) - 1;
          }
          if(data.list.currentPage > 5) {
            html += '<li class="page-item"><a class="page-link" data-value="1" aria-label="Previous">\
                <i class="ti-angle-double-left f-12"></i>\
                <span aria-hidden="true"></span>\
                <span class="sr-only">Previous</span>\
              </a></li>\
              <li class="page-item"><a class="page-link" data-value=\"'+(pRCnt * pageSize)+'"\ aria-label="Previous">\
                <i class="ti-angle-left f-12"></i>\
                <span aria-hidden="true"></span>\
                <span class="sr-only">Previous</span>\
              </a></li>';
          }

          for(var index=pRCnt * pageSize + 1;index<(pRCnt + 1)*pageSize + 1;index++){
            var active = (data.list.currentPage == index) ? "active" : "";
            html += '<li class=\"'+active+' page-item">\
              <a class="page-link" data-value=\"'+index+'"\ >'+index+'</a></li>'

            if(index == pageCount) {
              break;
            }
          }
          if((pRCnt + 1) * pageSize < pageCount) {
            html += '<li class="page-item">\
                  <a class="page-link" data-value=\"'+((pRCnt + 1)*pageSize+1)+'"\ aria-label="Next">\
                    <i class="ti-angle-right f-12"></i>\
                    <span aria-hidden="true"></span>\
                    <span class="sr-only">Next</span>\
                  </a></li>\
                  <li class="page-item">\
                  <a class="page-link" data-value=\"'+pageCount+'"\ aria-label="Next">\
                    <i class="ti-angle-double-right f-12"></i>\
                    <span aria-hidden="true"></span>\
                    <span class="sr-only">Next</span>\
                  </a></li>';
          }
          html += '</ul></td></tr>';
          $('#modal-cntList tfoot').append(html);
        }
      }
    });
  }
  // 모달 등록 이메일 검색 클릭시
  $('#searchMail').on('click',function(){
    var param = {
      page : 1,
    };
    $('#group-Modal').modal('hide');
    ajaxGetMailPageList(param);
    $('#mail-Modal input').val('');
    $('#mail-Modal').modal('show');
  });
  // 메일 검색 모달 전체선택시
  $('#all').on('click',function(){
    $('input[type=checkbox]').prop("checked",$('#all').is(":checked"));
  });
  // 메일 검색 모달 체크박스 선택시
  $(document).on('click','input[type=checkbox]:not(#all)',function(){
    $('#all').prop("checked",false);
  });
  // 그룹추가시
  $('.btn-iGroup').on('click',function(){
    var list = [];
    $('input[type=checkbox]:not(#all):checked').each(function(idx,ele){
      var trEle = $(ele).parents('tr');
      list.push({title:$('#group').text(),idx:trEle.find('#idx').val(),email:trEle.find('.edit').text()});
    });
    if(list.length == 0){
      swal("ERROR!", '추가할 이메일을 선택해주세요.', "error");
      return false;
    }
    swal({
      title: "그룹에 추가하시겠습니까?",
      text: "선택된 이메일이 해당 그룹에 추가됩니다.",
      icon: "warning",
      buttons: ["취소", true],
      dangerMode: true,
    })
    .then((value) => {
      if (value != null) {
        addGroup(list);
      }
    });
  });
  function addGroup(arr){
    $('input[type=checkbox]:checked').prop('checked',false);
    $.ajax({
      type: "POST",
      url: "/list/addGroup",
      data: {'list' : JSON.stringify(arr)},
      error:function(request,status,error){
        console.log('code:'+request.status+'\n'+'message:'+request.responseText+'\n'+'error:'+error);
        swal("ERROR!", '새로고침 후 다시 시도해주세요.', "error");
      },
      success:function(data){
        if(data.status){
          swal("SUCCESS!", '그룹에 추가했습니다.', "success")
          .then((value)=>{
            var param = {
              page : 1,
              group : $('#group').text()
            };
            ajaxGetPageGroupList(param);
            reloadPage();
          });
        }else{
          swal("ERROR!", '새로고침 후 다시 시도해주세요.', "error");
        }
      }
    });
  }
  // 메일 검색 모달 이메일 검색시
