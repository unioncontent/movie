<div class="main-body">
  <div class="page-wrapper">
    <div class="page-header">
      <div class="page-header-title">
        <h4>Facebook <%=writer%></h4>
      </div>
      <div class="page-header-breadcrumb">
        <ul class="breadcrumb-title">
          <li class="breadcrumb-item">
            <a href="/">
              <i class="fas fa-home"></i>
            </a>
          </li>
          <li class="breadcrumb-item"><a href="#!"><%=writer%></a></li>
        </ul>
      </div>
    </div>
    <div class="page-body">
      <div class="row" id="listTable">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <div class="col-12 col-md-2 f-right col-sm-9 m-l-10 p-l-0 p-r-0 m-b-10 right-icon-control">
                <input type="text" class="form-control p-t-10 form-control-default search-text" value="<%= search %>" placeholder="내용검색" id="searchInput">
                <div class="form-icon" id="searchBtn">
                  <i class="fas fa-search"></i>
                </div>
              </div>
              <div class="col-md-2 p-r-0 p-l-0 f-right reportrange">
                <div id="reportrange" class="form-control form-control-default">
                  <i class="glyphicon glyphicon-calendar far fa-calendar-alt"></i>
                  <span></span>
                  <i class="f-right fa fa-angle-down" style="font-size: 17px;"></i>
                </div>
              </div>
            </div>
            <div class="card-block table-border-style">
              <div class="preloader3 loader-block">
                <div class="circ1 loader-primary"></div>
                <div class="circ2 loader-primary"></div>
                <div class="circ3 loader-primary"></div>
                <div class="circ4 loader-primary"></div>
              </div>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th width="1%">
                        <div class="border-checkbox-section" style="max-width: 30px;">
                          <div class="border-checkbox-group border-checkbox-group-default">
                            <input class="border-checkbox" type="checkbox" id="checkboxAll">
                            <label class="border-checkbox-label" for="checkboxAll"></label>
                          </div>
                        </div>
                      </th>
                      <th width="3%">NO</th>
                      <th width="5%" style="min-width: 80px;">작성날짜</th>
                      <th width="5%" style="min-width: 80px;">보고날짜</th>
                      <th width="5%" style="min-width: 80px;">총검출수</th>
                      <th width="5%" style="min-width: 80px;">조회수</th>
                      <th width="5%" style="min-width: 80px;">댓글수</th>
                      <th width="5%" style="min-width: 80px;">좋아요수</th>
                      <th width="20%" style="min-width:58px">내용</th>
                      <th width="20%" style="min-width: 300px;">제목</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%
                      var limit = 10;
                      if(currentPage > 0){
                        (currentPage - 1) * limit;
                      }
                      for(var i=0; i < list.length; i++) {
                    %>
                    <tr>
                      <input type="hidden" id="idx" value="<%=list[i].sns_idx%>" />
                      <td>
                        <div class="border-checkbox-section" style="max-width: 30px;">
                          <div class="border-checkbox-group border-checkbox-group-default">
                            <input class="border-checkbox news-checkbox" type="checkbox" id="checkbox<%=i%>" <%=(list[i].marketing_idx != null) ? 'checked' : ''%>>
                            <label class="border-checkbox-label" for="checkbox<%=i%>"></label>
                          </div>
                        </div>
                      </td>
                      <th><%= listCount - i - offset %></th>
                      <td><%= list[i].writeDate %></td>
                      <td><input type="text" name="datefilter" class="datepicker form-control" value="<%= list[i].reportDate %>"/></td>
                      <td><span id="cnt"><%= list[i].total_cnt %></span>건</td>
                      <td><span id="v_cnt"><%= list[i].view_cnt %></span>회</td>
                      <td><span id="r_cnt"><%= list[i].reply_cnt %></span>회</td>
                      <td><span id="l_cnt"><%= list[i].like_cnt %></span>회<input type="hidden" id="s_cnt" value="<%= list[i].share_cnt %>"/></td>
                      <td>
                        <a href="<%= list[i].url %>" target="_blank" title="<%= list[i].sns_content %>">
                          <div class="title_nobr"><%= list[i].sns_content %></div>
                        </a>
                      </td>
                      <td><input type="text" placeholder="제목" id="title" value="<%= list[i].sns_subcontent %>" class="form-control title_input"/></td>
                    </tr>
                    <% } %>
                  </tbody>
                  <tfoot>
                    <tr>
                    <%
                    var pageCount = Math.ceil(listCount/limit);
                    if(pageCount > 1) {
                    %>
                      <td colspan="6">
                        <button id="addBtn" class="btn btn-list alert-check p-r-5 p-l-5 m-l-15 m-b-5  f-left m-t-5"><i class="fas fa-angle-down"></i>선택저장</button>
                      </td>
                      <td colspan="4">
                        <ul class="pagination float-right">
                          <%
                            var pageSize = 5;
                            var pRCnt = parseInt(currentPage / pageSize);
                            if(currentPage % pageSize == 0){
                              pRCnt = parseInt(currentPage / pageSize) - 1;
                            }
                            if(currentPage > 5) {
                          %>
                            <li class="page-item">
                              <a class="page-link" data-value="1" aria-label="Previous">
                                <i class="ti-angle-double-left f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                            </li>
                            <li class="page-item">
                              <a class="page-link" data-value=="<%=(pRCnt * pageSize)%>" aria-label="Previous">
                                <i class="ti-angle-left f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                            </li>
                          <% } %>
                          <% for(var index=pRCnt * pageSize + 1;index<(pRCnt + 1)*pageSize + 1;index++){%>
                            <li class= "<%=(currentPage == index) ? 'active' : ''%> page-item">
                              <a class="page-link" data-value="<%=index%>" >
                                <%= index %>
                              </a>
                            </li>
                          <%
                              if(index == pageCount) {
                                break;
                              }
                            }
                          %>
                          <% if((pRCnt + 1) * pageSize < pageCount) { %>
                            <li class="page-item">
                              <a class="page-link" data-value="<%=(pRCnt + 1)*pageSize+1%>" aria-label="Next">
                                <i class="ti-angle-right f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </li>
                            <li class="page-item">
                              <a class="page-link" data-value="<%=pageCount%>" aria-label="Next">
                                <i class="ti-angle-double-right f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </li>
                          <% } %>
                        </ul>
                      </td>
                    <% } else{ %>
                      <td colspan="10">
                        <button id="addBtn" class="btn btn-list alert-check p-r-5 p-l-5 m-l-15 m-b-5  f-left m-t-5"><i class="fas fa-angle-down"></i>선택저장</button>
                      </td>
                    <% } %>
                    </tr>
                  </tfoot>
                </table>
                <input type="hidden" id="sDate" value="<%=sDate%>"/>
                <input type="hidden" id="eDate" value="<%=eDate%>"/>
                <input type="hidden" id="writer" value="<%=writer%>"/>
                <input type="hidden" id="search" value="<%=search%>"/>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
