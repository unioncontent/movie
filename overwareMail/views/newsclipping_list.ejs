<div class="main-body">
  <div class="page-wrapper">
    <div class="page-header">
      <div class="page-header-title">
        <h4>지난리스트</h4>
      </div>
      <div class="page-header-breadcrumb">
        <ul class="breadcrumb-title">
          <li class="breadcrumb-item">
            <a href="/">
              <i class="fas fa-home"></i>
            </a>
          </li>
          <li class="breadcrumb-item"><a href="#!">지난리스트</a></li>
        </ul>
      </div>
    </div>
    <div class="page-body">
      <div class="row" id="listTable">
        <div class="col-xs-12">
          <div class="card">
            <div class="card-header">
              <div class="col-xs-3 p-r-0 p-l-0 f-right reportrange">
                <div id="reportrange" class="form-control form-control-default">
                  <i class="glyphicon glyphicon-calendar far fa-calendar-alt"></i>
                  <span></span>
                  <i class="f-right fa fa-angle-down" style="font-size: 17px;"></i>
                </div>
              </div>
            </div>
            <div class="card-block table-border-style">
              <div class="preloader3 loader-block">
                <div class="circ1 loader-primary"></div>
                <div class="circ2 loader-primary"></div>
                <div class="circ3 loader-primary"></div>
                <div class="circ4 loader-primary"></div>
              </div>
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th width="1%">NO</th>
                      <th width="20%">제목</th>
                      <th width="5%">발송자</th>
                      <th width="5%">수신자</th>
                      <th width="5%">수신그룹</th>
                      <th width="5%">작성일</th>
                      <th width="5%">예약일</th>
                      <th width="5%">발송일</th>
                      <th width="5%">관리</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%
                      var limit = 10;
                      if(currentPage > 0){
                        (currentPage - 1) * limit;
                      }
                      for(var i=0; i < list.length; i++) {
                        var recipiArr = list[i].M_recipi_idx.split(',');
                        var recipiStr = '';
                        if(recipiArr.length > 1){
                          recipiStr = ((list[i].M_recipi == null)? '(삭제된메일)':list[i].M_recipi)+' 외 '+(recipiArr.length-1);
                        }
                        else{
                          recipiStr = ((list[i].M_recipi == null)? '(삭제된메일)':list[i].M_recipi);
                        }

                        var groupStr = '';
                        if(list[i].M_group_idx != null){
                          var groupArr = list[i].M_group_idx.split(',');
                          if(groupArr.length > 1){
                            groupStr = ((list[i].M_group == null)? '(삭제된그룹)':list[i].M_group)+' 외 '+(groupArr.length-1);
                          }
                          else{
                            groupStr = ((list[i].M_group == null)? '(삭제된그룹)':list[i].M_group);
                          }
                        }
                    %>
                    <tr>
                      <th><%= listCount - i - offset %></th>
                      <td>
                        <a href="http://showbox.email/preview/newsclipping?idx=<%= list[i].n_idx %>" target="_blank">
                          <div class="title_nobr"><%= list[i].M_subject %></div>
                        </a>
                      </td>
                      <td><%= list[i].M_sender %></td>
                      <td><%= recipiStr %></td>
                      <td><div class="group-nobr" title="<%= groupStr %>"><%= groupStr %></div></td>
                      <td><div class="date-nobr"><%= list[i].M_regdate %></div></td>
                      <td>
                        <div class="date-nobr"><%if(list[i].M_type != 1){%><i class="fas fa-minus"></i><%}else{%><%=list[i].SENDTIME%><%}%></div>
                      </td>
                      <td>
                        <div class="date-nobr"><%if(list[i].M_type == 1 && (new Date().getTime() < new Date(list[i].SENDTIME).getTime())){%><i class="fas fa-minus"></i><%}else{%><%=list[i].SENDTIME%><%}%></div>
                      </td>
                      <td>
                        <button class="btn btn-xs btn-inverse btn-delete" data-module="<%= list[i].M_module %>" data-mid="<%= list[i].M_a_id %>" data-idx="<%= list[i].n_idx %>">삭제</button>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                  <tfoot>
                    <%
                    var pageCount = Math.ceil(listCount/limit);
                    if(pageCount > 1) {
                    %>
                    <tr>
                      <td colspan="9">
                        <ul class="pagination float-right">
                          <%
                            var pageSize = 5;
                            var pRCnt = parseInt(currentPage / pageSize);
                            if(currentPage % pageSize == 0){
                              pRCnt = parseInt(currentPage / pageSize) - 1;
                            }
                            if(currentPage > 5) {
                          %>
                            <li class="page-item">
                              <a class="page-link" data-value="1" aria-label="Previous">
                                <i class="ti-angle-double-left f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                            </li>
                            <li class="page-item">
                              <a class="page-link" data-value=="<%=(pRCnt * pageSize)%>" aria-label="Previous">
                                <i class="ti-angle-left f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                              </a>
                            </li>
                          <% } %>
                          <% for(var index=pRCnt * pageSize + 1;index<(pRCnt + 1)*pageSize + 1;index++){%>
                            <li class= "<%=(currentPage == index) ? 'active' : ''%> page-item">
                              <a class="page-link" data-value="<%=index%>" >
                                <%= index %>
                              </a>
                            </li>
                          <%
                              if(index == pageCount) {
                                break;
                              }
                            }
                          %>
                          <% if((pRCnt + 1) * pageSize < pageCount) { %>
                            <li class="page-item">
                              <a class="page-link" data-value="<%=(pRCnt + 1)*pageSize+1%>" aria-label="Next">
                                <i class="ti-angle-right f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </li>
                            <li class="page-item">
                              <a class="page-link" data-value="<%=pageCount%>" aria-label="Next">
                                <i class="ti-angle-double-right f-12"></i>
                                <span aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                              </a>
                            </li>
                          <% } %>
                        </ul>
                      </td>
                    </tr>
                    <% } %>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      <input type="hidden" id="page" value="<%=page%>"/>
      <input type="hidden" id="sDate" value="<%=sDate%>"/>
      <input type="hidden" id="eDate" value="<%=eDate%>"/>
    </div>
  </div>
</div>
